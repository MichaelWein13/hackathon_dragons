{
    "name": "Wiki Fact Checker",
    "version": "1.0.0",
    "description": "Wikipedia Fact Checker",
    "manifest_version": 3,
    "author": "Hackathon Dragons",
    "action":{
        "default_popup": "index.html",
        "default_title": "Wiki Fact Checker"
